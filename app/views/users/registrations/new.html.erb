<h2>ユーザー新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :Eメールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード再入力 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :性別 %><br />
    <label> <%= f.radio_button :gender,1 %> 男</label>
    <label> <%= f.radio_button :gender,2 %>   女</label>
  </div>
  <div class="field">
    <%= f.label :職業 %><br />
    <%= f.text_field :job %>
  </div>
  <div class="field">
    <%= f.label :自己紹介コメント %><br />
    <%= f.text_field :introduction %>
  </div>
  <div class="field">
    <%= f.label :写真 %><br />
    <%= f.file_field :picture, id: :post_picture %>
  </div>


  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
